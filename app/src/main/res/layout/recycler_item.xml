<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recyclerItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:textSize="35sp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:outlineAmbientShadowColor="@color/black"
        android:text="NAME"></TextView>

    <TextView
        android:id="@+id/recyclerItemLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="52dp"
        android:layout_marginStart="52dp"
        android:layout_toEndOf="@+id/recyclerItemName"
        android:layout_toRightOf="@+id/recyclerItemName"
        android:text="LAST NAME"
        android:textSize="35sp"></TextView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/recyclerItemLastName"
        android:background="@color/black"></View>

</RelativeLayout>